{
  "apiVersion": "v1",
  "spec": {
    "containers": [
      {
        "name": "kaniko",
        "image": "gcr.io/kaniko-project/executor:latest",
        "stdin": true,
        "stdinOnce": true,
        "args": [
          "--build-arg=FEDORA_VERSION=${FEDORA_VERSION}",
          "--build-arg=BUILD_ARCH=${BUILD_ARCH}",
          "--dockerfile=Dockerfile",
          "--context=tar://stdin",
          "--destination=${DESTINATION}",
          "--cache=true"
        ]
      }
    ]
  }
}
